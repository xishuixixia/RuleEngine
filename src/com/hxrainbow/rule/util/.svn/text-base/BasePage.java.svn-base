package com.hxrainbow.rule.util;import java.util.List;public class BasePage {		private int page = 1;	private int pageSize = 20; //每页多少条 	@SuppressWarnings("rawtypes")	private List list;	private int totalPage;//页数	private int recordNum;		private String orderField;		private String orderDirection;	public int getRecordNum() {		return recordNum;	}	public void setRecordNum(int recordNum) {		this.recordNum = recordNum;		totalPage = recordNum % pageSize == 0 ? recordNum / pageSize : recordNum / pageSize + 1;	}	public int getTotalPage() {		return totalPage;	}	public int getPage() {		return page;	}	public void setPage(int page) {		if (page < 1) {			this.page = 1;		} else {			this.page = page;		}	}	public int getPageSize() {		return pageSize;	}	@SuppressWarnings("rawtypes")	public List getList() {		return list;	}	public void setList(@SuppressWarnings("rawtypes") List list) {		this.list = list;	}	public String getOrderField() {		return orderField;	}	public void setOrderField(String orderField) {		this.orderField = orderField;	}	public String getOrderDirection() {		return orderDirection;	}	public void setOrderDirection(String orderDirection) {		this.orderDirection = orderDirection;	}	public void setPageSize(int pageSize) {		this.pageSize = pageSize;	}	public void setTotalPage(int totalPage) {		this.totalPage = totalPage;	}		}